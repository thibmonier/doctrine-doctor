{
  "name": "ahmed-bhs/doctrine-doctor",
  "description": "Runtime analysis tool for Doctrine ORM integrated into Symfony Web Profiler. Unlike static linters, it analyzes actual query execution at runtime to detect performance bottlenecks, security vulnerabilities, and best practice violations during development with real execution context and data.",
  "type": "symfony-bundle",
  "license": "MIT",
  "keywords": [
    "symfony",
    "symfony-bundle",
    "doctrine",
    "doctrine-orm",
    "profiler",
    "web-profiler",
    "runtime-analysis",
    "performance",
    "analyzer",
    "debugging",
    "dql",
    "query-optimization",
    "n-plus-one",
    "n-plus-one-detection",
    "security",
    "doctrine-analyzer",
    "sql-profiler",
    "database-performance",
    "orm-debugging",
    "query-analyzer",
    "missing-indexes",
    "slow-queries",
    "developer-tools",
    "best-practices",
    "code-quality",
    "development-tools",
    "performance-monitoring",
    "query-analysis"
  ],
  "homepage": "https://github.com/ahmed-bhs/doctrine-doctor",
  "authors": [
    {
      "name": "Ahmed EBEN HASSINE",
      "email": "ahmedbhs123@gmail.com",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "https://github.com/ahmed-bhs/doctrine-doctor/issues",
    "source": "https://github.com/ahmed-bhs/doctrine-doctor"
  },
  "require": {
    "php": "^8.2",
    "doctrine/doctrine-bundle": "^2.12",
    "doctrine/orm": "^2.10|^3.0|^4.0",
    "nikic/php-parser": "^5.6",
    "phpmyadmin/sql-parser": "^6.0",
    "symfony/framework-bundle": "^6.0|^7.0|^8.0",
    "webmozart/assert": "^1.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "symfony/var-dumper": "^6.0|^7.0",
    "symfony/var-exporter": "^6.4|^7.0",
    "symfony/stopwatch": "^6.0|^7.0",
    "twig/twig": "^3.0",
    "deptrac/deptrac": "^4.2",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-doctrine": "^2.0",
    "phpstan/phpstan-symfony": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "symplify/easy-coding-standard": "^12.6",
    "bitbag/coding-standard": "^3.0",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpmd/phpmd": "^2.15"
  },
  "autoload": {
    "psr-4": {
      "AhmedBhs\\DoctrineDoctor\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AhmedBhs\\DoctrineDoctor\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html=coverage/",
    "test:unit": "phpunit --testsuite unit",
    "lint": "parallel-lint src tests",
    "phpstan": "phpstan analyse --memory-limit=1G",
    "phpstan:baseline": "phpstan analyse --generate-baseline --memory-limit=1G",
    "phpmd": "phpmd src text phpmd.xml",
    "phpmd:html": "phpmd src html phpmd.xml --reportfile phpmd-report.html",
    "phpmd:xml": "phpmd src xml phpmd.xml --reportfile phpmd-report.xml",
    "ecs": "ecs check",
    "ecs:fix": "ecs check --fix",
    "deptrac": "deptrac analyse --config-file=deptrac.yaml",
    "deptrac:baseline": "deptrac analyse --config-file=deptrac.yaml --formatter=baseline --output=deptrac.baseline.yaml",
    "deptrac:graph": "deptrac analyse --config-file=deptrac.yaml --formatter=graphviz-image --output=deptrac-layers.png",
    "markdown-lint": "npx markdownlint-cli2 \"docs/**/*.md\" \"*.md\" \"src/**/*.md\" \"tests/**/*.md\"",
    "cs": [
      "@lint",
      "@ecs",
      "@phpstan",
      "@phpmd",
      "@markdown-lint"
    ],
    "cs:fix": [
      "@ecs:fix",
      "@rector:fix"
    ],
    "check": [
      "@lint",
      "@test",
      "@ecs",
      "@phpstan",
      "@phpmd",
      "@rector",
      "@deptrac"
    ],
    "fix": [
      "@ecs:fix",
      "@rector:fix"
    ],
    "qa": "@check"
  },
  "scripts-descriptions": {
    "test": "Run PHPUnit tests",
    "test:coverage": "Run tests with coverage report",
    "lint": "Check PHP syntax errors with parallel-lint",
    "phpstan": "Run PHPStan static analysis",
    "phpstan:baseline": "Generate PHPStan baseline",
    "phpmd": "Run PHPMD mess detector (text output)",
    "phpmd:html": "Generate PHPMD HTML report",
    "phpmd:xml": "Generate PHPMD XML report for CI/CD",
    "ecs": "Check code style with ECS",
    "ecs:fix": "Fix code style with ECS",
    "rector": "Check code with Rector (dry-run)",
    "rector:fix": "Fix code with Rector",
    "deptrac": "Analyze architecture dependencies with Deptrac",
    "deptrac:baseline": "Generate Deptrac baseline for existing violations",
    "deptrac:graph": "Generate architecture diagram (requires graphviz)",
    "cs": "Check syntax, code style and static analysis (Lint + ECS + PHPStan + PHPMD)",
    "cs:fix": "Fix code style and refactor (ECS + Rector)",
    "check": "Run all quality checks (Lint + Tests + ECS + PHPStan + PHPMD + Rector + Deptrac)",
    "fix": "Automatically fix code issues",
    "qa": "Run complete quality assurance"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "symfony/flex": true
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    },
    "symfony": {
      "allow-contrib": false,
      "require": "^6.0|^7.0"
    }
  }
}
